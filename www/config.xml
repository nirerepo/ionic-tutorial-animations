<?xml version='1.0' encoding='utf-8'?>
<widget id="mov.es.nire"
    version="0.0.2"
    xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    versionCode="1"
    >
    <name>Movistar Nire</name>
    <description>Movistar Health CO</description>
    <author email="aitor@nire.co" href="http://nire.co/">
      Nire
    </author>
    <gap:config-file platform="android" parent="/manifest">
      <application android:debuggable="true" />
    </gap:config-file>    
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <preference name="phonegap-version" value="cli-6.0.0" />
    
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="android-targetSdkVersion" value="21" />
    <preference name="BackupWebStorage" value="none"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <preference name="orientation" value="portrait"/>
    <preference name="xwalkVersion" value="xwalk_core_library:18+"/>
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect"/>
    <preference name="xwalkMode" value="embedded"/>
    <preference name="xwalkMultipleApk" value="true"/>
    <preference name="deployment-target" value="8" />
    <preference name="android-installLocation" value="auto" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
  <platform name="ios">
    <icon src="resources/ios/icon/icon.png" platform="ios" width="57" height="57"/>
    <icon src="resources/ios/icon/icon@2x.png" platform="ios" width="114" height="114"/>
    <icon src="resources/ios/icon/icon-40.png" platform="ios" width="40" height="40"/>
    <icon src="resources/ios/icon/icon-40@2x.png" platform="ios" width="80" height="80"/>
    <icon src="resources/ios/icon/icon-50.png" platform="ios" width="50" height="50"/>
    <icon src="resources/ios/icon/icon-50@2x.png" platform="ios" width="100" height="100"/>
    <icon src="resources/ios/icon/icon-60.png" platform="ios" width="60" height="60"/>
    <icon src="resources/ios/icon/icon-60@2x.png" platform="ios" width="120" height="120"/>
    <icon src="resources/ios/icon/icon-60@3x.png" platform="ios" width="180" height="180"/>
    <icon src="resources/ios/icon/icon-72.png" platform="ios" width="72" height="72"/>
    <icon src="resources/ios/icon/icon-72@2x.png" platform="ios" width="144" height="144"/>
    <icon src="resources/ios/icon/icon-76.png" platform="ios" width="76" height="76"/>
    <icon src="resources/ios/icon/icon-76@2x.png" platform="ios" width="152" height="152"/>
    <icon src="resources/ios/icon/icon-small.png" platform="ios" width="29" height="29"/>
    <icon src="resources/ios/icon/icon-small@2x.png" platform="ios" width="58" height="58"/>
    <icon src="resources/ios/icon/icon-small@3x.png" platform="ios" width="87" height="87"/>
    <gap:splash src="resources/ios/splash/Default-568h@2x~iphone.png" platform="ios" width="640" height="1136"/>
    <gap:splash src="resources/ios/splash/Default-667h.png" platform="ios" width="750" height="1334"/>
    <gap:splash src="resources/ios/splash/Default-736h.png" platform="ios" width="1242" height="2208"/>
    <gap:splash src="resources/ios/splash/Default-Portrait@2x~ipad.png" platform="ios" width="1536" height="2048"/>
    <gap:splash src="resources/ios/splash/Default-Portrait~ipad.png" platform="ios" width="768" height="1024"/>
    <gap:splash src="resources/ios/splash/Default@2x~iphone.png" platform="ios" width="640" height="960"/>
    <gap:splash src="resources/ios/splash/Default~iphone.png" platform="ios" width="320" height="480"/>
  </platform>
  <platform name="android">
    <icon src="resources/android/icon/drawable-ldpi-icon.png" platform="android" density="ldpi"/>
    <icon src="resources/android/icon/drawable-mdpi-icon.png" platform="android" density="mdpi"/>
    <icon src="resources/android/icon/drawable-hdpi-icon.png" platform="android" density="hdpi"/>
    <icon src="resources/android/icon/drawable-xhdpi-icon.png" platform="android" density="xhdpi"/>
    <icon src="resources/android/icon/drawable-xxhdpi-icon.png" platform="android" density="xxhdpi"/>
    <icon src="resources/android/icon/drawable-xxxhdpi-icon.png" platform="android" density="xxxhdpi"/>
    <splash src="resources/android/splash/drawable-port-ldpi-screen.png" platform="android" density="port-ldpi"/>
    <splash src="resources/android/splash/drawable-port-mdpi-screen.png" platform="android" density="port-mdpi"/>
    <splash src="resources/android/splash/drawable-port-hdpi-screen.png" platform="android" density="port-hdpi"/>
    <splash src="resources/android/splash/drawable-port-xhdpi-screen.png" platform="android" density="port-xhdpi"/>
    <splash src="resources/android/splash/drawable-port-xxhdpi-screen.png" platform="android" density="port-xxhdpi"/>
    <splash src="resources/android/splash/drawable-port-xxxhdpi-screen.png" platform="android" density="port-xxxhdpi"/>
  </platform>
    <!-- PLUGINS -->
    <preference name="android-build-tool" value="gradle" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" version="1.2.1" source="npm"/>
    <gap:plugin name="cordova-plugin-x-toast" source="npm" />
    <gap:plugin name="cordova-plugin-crosswalk-webview" source="npm" version="1.5.0"/>
    <gap:plugin name="cordova-plugin-facebook4" spec="1.3.0" source="npm">
        <param name="APP_ID" value="224019634634852" />
        <param name="APP_NAME" value="NireApp" />
    </gap:plugin>
    <gap:plugin name="phonegap-plugin-push" version="1.7.2" source="npm">
        <param name="SENDER_ID" value="606551403580" />
    </gap:plugin>
    <gap:plugin name="cordova-plugin-sms" version="1.0.5" source="npm" />
    <gap:plugin name="cordova-plugin-health-fork" version="0.5.4" />
    <gap:plugin name="cordova-plugin-device" source="npm" />

    <preference name="xwalkVersion" value="xwalk_core_library:18+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
